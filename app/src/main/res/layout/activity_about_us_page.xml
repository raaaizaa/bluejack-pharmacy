<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".aboutUsPage"
    android:background="@color/blue"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue Jack Pharmacy"
        android:textSize="36dp"
        android:layout_gravity="center"
        android:padding="39dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:fontFamily="@font/roboto_bold"
                android:textSize="24dp"
                android:textColor="@color/blue"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue Jack Pharmacy is a pharmacy located in Jakarta, Indonesia. We sell various types of medicine for your daily needs."
                android:textAlignment="center"
                android:padding="24dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_margin="4dp"

                    />

                <Button
                    android:id="@+id/locateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locate Us!"
                    android:layout_margin="4dp"
                    />

            </GridLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>